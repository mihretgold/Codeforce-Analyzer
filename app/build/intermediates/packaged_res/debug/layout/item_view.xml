<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/questionId"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="A"
        android:textSize="80dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/questionName"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionId"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="Quesion Name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="46dp"
        android:layout_height="29dp"
        android:layout_below="@id/questionName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="341dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:text="1200"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/pythonImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@id/questionId" />

    <TextView
        android:id="@+id/pythonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/pythonImage"
        android:text="Python"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/cppImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pythonImage"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="283dp"
        android:layout_toEndOf="@+id/questionId" />

    <TextView
        android:id="@+id/cppText"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/questionName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="93dp"
        android:text="C++"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/javaImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/cppImage"
        android:layout_alignStart="@+id/cppImage"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/javaText"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/javaImage"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-33dp"
        android:layout_toEndOf="@+id/javaImage"
        android:text="Java"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/questionName"
        android:layout_marginStart="57dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/questionId"
        android:text="Accecpted"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rating"
        />
</RelativeLayout>